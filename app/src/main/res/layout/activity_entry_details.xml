<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EntryDetailsActivity">

    <include layout="@layout/layout_entry_details_toolbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/entry_details_activity_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="6dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/entry_details_activity_name_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_title_black"
                        android:tint="@color/color_primary" />

                    <TextView
                        android:id="@+id/entry_details_activity_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/entry_details_activity_name_image_view"
                        android:layout_toRightOf="@id/entry_details_activity_name_image_view"
                        android:ellipsize="end"
                        android:textAppearance="@style/NormalTextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/entry_details_activity_name_image_view"
                        android:layout_marginTop="16dp"
                        android:background="@color/divider_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/entry_details_activity_partner_name_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_school_black"
                        android:tint="@color/color_primary" />

                    <TextView
                        android:id="@+id/entry_details_activity_partner_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/entry_details_activity_partner_name_image_view"
                        android:layout_toRightOf="@id/entry_details_activity_partner_name_image_view"
                        android:ellipsize="end"
                        android:textAppearance="@style/NormalTextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/entry_details_activity_partner_name_image_view"
                        android:layout_marginTop="16dp"
                        android:background="@color/divider_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/entry_details_activity_description_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_description_black"
                        android:tint="@color/color_primary" />

                    <TextView
                        android:id="@+id/entry_details_activity_description_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/entry_details_activity_description_image_view"
                        android:layout_toRightOf="@id/entry_details_activity_description_image_view"
                        android:ellipsize="end"
                        android:textAppearance="@style/NormalTextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/entry_details_activity_description_image_view"
                        android:layout_marginTop="16dp"
                        android:background="@color/divider_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/entry_details_activity_courses_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingTop="24dp"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/entry_details_activity_courses_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_view_list_black"
                        android:tint="@color/color_primary" />

                    <TextView
                        android:id="@+id/entry_details_activity_courses_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/entry_details_activity_courses_image_view"
                        android:layout_toRightOf="@id/entry_details_activity_courses_image_view"
                        android:ellipsize="end"
                        android:textAppearance="@style/NormalTextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/entry_details_activity_courses_image_view"
                        android:layout_marginTop="24dp"
                        android:background="@color/divider_color" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>